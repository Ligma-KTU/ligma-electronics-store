@model Order
@{
    Layout = "_Layout";
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>
<hr />

<dl>
    <dt>Username</dt>
    <dd>@Model.User.UserName</dd>

    <dt>Name</dt>
    <dd>@Model.Name</dd>

    <dt>Surname</dt>
    <dd>@Model.Surname</dd>

    <dt>Address</dt>
    <dd>@Model.Address</dd>

    <dt>ZipCode</dt>
    <dd>@Model.ZipCode</dd>

    <dt>Country</dt>
    <dd>@Model.Country</dd>

    <dt>Phone Number</dt>
    <dd>@Model.PhoneNumber</dd>

    <dt>Email</dt>
    <dd>@Model.Email</dd>

    <dt>Date</dt>
    <dd>@Model.OrderDate.ToString()</dd>

</dl>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Product.Price</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2"><strong>Total:</strong></td>
            <td>$@Model.OrderItems.Sum(item => item.Quantity * item.Product.Price)</td>
        </tr>
    </tfoot>
</table>