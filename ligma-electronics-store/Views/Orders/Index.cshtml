@model List<Order>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Address
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email
            </th>
            <th>
                Date
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.Name
                </td>
                <td>
                    @order.Surname
                </td>
                <td>
                    @order.Address
                </td>
                <td>
                    @order.PhoneNumber
                </td>
                <td>
                    @order.Email
                </td>
                <td>
                    @order.OrderDate.ToString()
                </td>
                <td>
                    $@order.OrderItems.Sum(item => item.Quantity * item.Product.Price)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id">Details | </a>
                    <a asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
